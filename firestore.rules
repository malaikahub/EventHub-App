rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write their own savedEvents
    match /users/{userId}/savedEvents/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public events collection
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null; // optional, for managers creating events
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId}/savedEvents/{eventId} {
  allow read, write: if request.auth != null && request.auth.uid == userId;
}

  }
}
